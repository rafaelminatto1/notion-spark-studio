  "protocol_handlers": [
    {
      "protocol": "web+notion",
      "url": "/open?url=%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "image/*",
            "text/*",
            ".pdf",
            ".doc",
            ".docx",
            ".txt",
            ".md"
          ]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "text/plain": [".txt"],
        "text/markdown": [".md"],
        "application/pdf": [".pdf"],
        "application/msword": [".doc"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"],
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "related_applications": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "widgets": [
    {
      "name": "Quick Note",
      "short_name": "Note",
      "description": "Create a quick note",
      "tag": "quick-note",
      "template": "quick-note-template",
      "ms_ac_template": "quick-note-adaptive-card.json",
      "data": "/api/widgets/quick-note",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/widgets/quick-note-screenshot.png",
          "sizes": "320x160",
          "label": "Quick note widget"
        }
      ],
      "icons": [
        {
          "src": "/widgets/quick-note-icon.png",
          "sizes": "64x64",
          "type": "image/png"
        }
      ],
      "auth": false,
      "update": 900
    },
    {
      "name": "Daily Metrics",
      "short_name": "Metrics",
      "description": "View daily productivity metrics",
      "tag": "daily-metrics",
      "template": "metrics-template",
      "ms_ac_template": "metrics-adaptive-card.json",
      "data": "/api/widgets/daily-metrics",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/widgets/metrics-screenshot.png",
          "sizes": "320x160",
          "label": "Daily metrics widget"
        }
      ],
      "icons": [
        {
          "src": "/widgets/metrics-icon.png",
          "sizes": "64x64",
          "type": "image/png"
        }
      ],
      "auth": true,
      "update": 300
    }
  ],
  "permissions": [
    "geolocation",
    "notifications",
    "persistent-storage",
    "background-sync",
    "camera",
    "microphone"
  ],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "serviceworker": {
    "src": "/sw.js",
    "scope": "/",
    "update_via_cache": "none"
  }
