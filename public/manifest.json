{
  "name": "Notion Spark Studio",
  "short_name": "Spark Studio",
  "description": "Plataforma avançada de notas estilo Notion com IA, colaboração em tempo real e sincronização offline",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#3B82F6",
  "background_color": "#F8FAFC",
  "lang": "pt-BR",
  "scope": "/",
  "categories": ["productivity", "education", "utilities"],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Nova Nota",
      "short_name": "Nova Nota",
      "description": "Criar uma nova nota rapidamente",
      "url": "/new-note",
      "icons": [
        {
          "src": "/icons/shortcut-new-note-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Buscar",
      "short_name": "Buscar",
      "description": "Buscar nas suas notas",
      "url": "/search",
      "icons": [
        {
          "src": "/icons/shortcut-search-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "IA Assistant",
      "short_name": "IA",
      "description": "Abrir assistente de IA",
      "url": "/ai-assistant",
      "icons": [
        {
          "src": "/icons/shortcut-ai-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "type": "image/png",
      "sizes": "1280x720",
      "form_factor": "wide",
      "label": "Interface principal do Notion Spark Studio"
    },
    {
      "src": "/screenshots/desktop-2.png", 
      "type": "image/png",
      "sizes": "1280x720",
      "form_factor": "wide",
      "label": "Editor de notas com colaboração em tempo real"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "type": "image/png", 
      "sizes": "360x640",
      "form_factor": "narrow",
      "label": "Interface mobile adaptativa"
    },
    {
      "src": "/screenshots/mobile-2.png",
      "type": "image/png",
      "sizes": "360x640", 
      "form_factor": "narrow",
      "label": "Assistente IA no mobile"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+notionspark",
      "url": "/?handler=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/plain", "image/*", "application/pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "text/plain": [".txt", ".md"],
        "application/json": [".json"],
        "text/markdown": [".md", ".markdown"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
} 